@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h2 class="text-center">Calculadora</h2>
<br />
<br />

<form class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-4">
            <div class="input-group input-group-lg">
                <span class="input-group-addon" id="sizing-addon1">1° numero</span>
                <input type="number" name="numero1" step="0.1" class="form-control" aria-describedby="sizing-addon1">

            </div>


        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-4">

            <select name="operacion" class="btn btn-danger dropdown-toggle">

                <option value="suma">SUMAR</option>
                <option value="resta">RESTAR</option>
                <option value="multi">MULTIPLICAR</option>
                <option value="divi">DIVIDIR</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <div class="input-group input-group-lg">
                <span class="input-group-addon" id="sizing-addon1">2° numero</span>
                <input type="number" name="numero2" step="0.1" class="form-control" aria-describedby="sizing-addon1">

            </div>


        </div>

    </div>
    <div class="form-group">
        <div class="col-sm-4">
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-send "></span> Mostrar Resultado</button>
        </div>
    </div>
</form>

@if (Model.resultado != null)
{
    <h2 class="text-primary">Resultado</h2>
    <h3 class="text-success">@Model.resultado</h3>
}
else
{

    <h5 class="text-danger">Nada Que mostrar!</h5>
}